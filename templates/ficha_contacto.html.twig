{% extends "base.html.twig" %}

{% block title %}Contactos
{% endblock %}
{% block body %}
	{% if app.user %}
		<div class="mb-3" style="float: right;">
			Eres
			{{ app.user.userIdentifier }}
			<button class="btn btn-primary">
				<a href="{{ path('app_logout') }}">Logout</a>
			</button>
		</div>
	{% endif %}
	<h1>Ficha del contacto</h1>
	{% if contacto %}
		{{ include ("partials/datos_contacto.html.twig", {'contacto': contacto}) }}
		<img src="{{ asset('images/' ~ contacto.file) }}"/><br>
		<button class="btn btn-primary">
			<a href="../contacto/editar/{{contacto.id}}">Editar</a>
		</button>
		<button class="btn btn-eliminar">
			<a href="../contacto/delete/{{contacto.id}}">Eliminar</a>
		</button>

		<button class="btn btn-primary">
			<a href="../contactos">Volver</a>
		</button>
	{% else %}
		<p>Contacto no encontrado</p>
	{% endif %}


{% endblock %}
